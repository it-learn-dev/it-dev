
<h3>Most Popular Product</h3>
<div class="row">
	<% for(var i = 0; i < products.length; i++) { %>
		<div class="col-6 col-md-2 col-sm-2 col-lg-2">
			<div class="form-group">
				<div class="card shadow-sm">
					<img src="https://nham24.com/upload/1524981522-Spicy-Pork.jpg" class="card-img-top" alt="...">
					<div class="card-body">
					    <h6 class="card-title"><%= products[i].product_name.length > 25 ? products[i].product_name.substring(0, 24) + '' : products[i].product_name %></h6>
					    <p class="card-text">Some quick.</p>
					    <a href="#" class="btn btn-outline-">Go somewhere</a>
					</div>
				</div>
			</div>
		</div>
	<% } %>
</div>




